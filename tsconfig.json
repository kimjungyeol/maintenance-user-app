{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "pages/AdminDaySchedule.tsx", "pages/AdminScheduleCalendar.tsx", "pages/MaintenanceHistory.tsx", "pages/UserBookingCalendar.tsx", "pages/UserBookingTime.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
